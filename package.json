{
	"name": "textarea-caret-typescript",
	"version": "4.1.0",
	"description": "Get the caret coordinates (top, left, height) of a textarea or input element in TypeScript",
	"type": "module",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/esm/index.js"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist/",
		"src/",
		"README.md",
		"LICENSE",
		"CHANGELOG.md"
	],
	"scripts": {
		"build": "node scripts/build.js",
		"build:cjs": "tsc --project tsconfig.cjs.json",
		"build:esm": "tsc --project tsconfig.esm.json",
		"build:types": "tsc --project tsconfig.types.json",
		"build:dev": "tsc --project tsconfig.dev.json",
		"clean": "rimraf dist coverage .tsbuildinfo",
		"test": "NODE_OPTIONS='--loader=ts-node/esm' jest",
		"test:watch": "NODE_OPTIONS='--loader=ts-node/esm' jest --watch",
		"test:coverage": "NODE_OPTIONS='--loader=ts-node/esm' jest --coverage",
		"test:browser": "playwright test",
		"test:esm": "NODE_OPTIONS='--experimental-vm-modules' jest --preset=ts-jest/presets/default-esm",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
		"typecheck": "tsc --noEmit",
		"typecheck:cjs": "tsc --project tsconfig.cjs.json --noEmit",
		"typecheck:esm": "tsc --project tsconfig.esm.json --noEmit",
		"dev": "tsc --project tsconfig.dev.json --watch",
		"prepublishOnly": "npm run clean && npm run build && npm run test && npm run lint",
		"release": "node scripts/release.js",
		"docs:build": "typedoc src/index.ts --out docs/api",
		"examples:serve": "http-server examples -p 8080"
	},
	"keywords": [
		"textarea",
		"input",
		"caret",
		"cursor",
		"position",
		"coordinates",
		"typescript",
		"browser",
		"dom",
		"text-editor",
		"autocomplete",
		"mention",
		"dropdown"
	],
	"author": "David Gogniashvili <david.gogniashvili.dg@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/component/textarea-caret-typescript.git"
	},
	"bugs": {
		"url": "https://github.com/component/textarea-caret-typescript/issues"
	},
	"homepage": "https://github.com/component/textarea-caret-typescript#readme",
	"devDependencies": {
		"@eslint/config-array": "^0.21.0",
		"@eslint/js": "^9.30.1",
		"@playwright/test": "^1.53.2",
		"@types/jest": "^30.0.0",
		"@typescript-eslint/eslint-plugin": "^8.36.0",
		"@typescript-eslint/parser": "^8.36.0",
		"eslint": "^9.30.1",
		"globals": "^16.3.0",
		"http-server": "^14.1.1",
		"jest": "^30.0.0-rc.1",
		"jest-environment-jsdom": "^30.0.4",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"typedoc": "^0.28.7",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.36.0"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead",
		"not IE 11"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"eslint-plugin-jest": "^29.0.1"
	}
}
